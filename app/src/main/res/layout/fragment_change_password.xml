<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.tanpn.messenger.setting.ChangePassword"
    android:padding="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Đổi mật khẩu"
            android:id="@+id/textView23"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textView23"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="#b8000000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/relativeLayout6"></RelativeLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtOldPass"
            android:textColor="#000"
            android:textColorHint="#88000000"
            android:hint="mật khẩu hiện tại"
            android:background="@drawable/custom_edittext"

            android:drawableLeft="@drawable/ic_password"
            android:drawableTint="#000"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@+id/relativeLayout6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtNewPass"
            android:textColor="#000"
            android:textColorHint="#88000000"
            android:hint="mật khẩu mới"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/ic_password"
            android:drawableTint="#000"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@+id/edtOldPass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtConfirm"
            android:textColor="#000"
            android:textColorHint="#88000000"
            android:hint="nhập lại"
            android:background="@drawable/custom_edittext"
            android:drawableLeft="@drawable/ic_password"
            android:drawableTint="#000"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_below="@+id/edtNewPass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textAllCaps="false"
            android:background="@drawable/button_login"
            android:textColor="#FFF"
            android:id="@+id/btnChangePassword"
            android:layout_below="@+id/edtConfirm"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textAllCaps="false"
            android:background="@drawable/button_login"
            android:textColor="#FFF"
            android:id="@+id/btnCancel"
            android:layout_below="@+id/btnChangePassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>
</RelativeLayout>
