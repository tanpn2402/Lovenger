<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tanpn.messenger.login.SignUp"
    android:background="#c0392b">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:background="#399a93" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00ffffff">


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/relativeLayout8"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/edtFullname"
                        android:layout_alignParentTop="false"
                        android:drawableLeft="@drawable/ic_username"
                        android:textColor="#FFF"
                        android:hint="họ tên"
                        android:textColorHint="#FFF"
                        android:background="@drawable/login_input"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="5dp" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/edtUsername"
                        android:layout_below="@+id/edtFullname"
                        android:textColor="#FFF"
                        android:textColorHint="#FFF"
                        android:hint="email"
                        android:background="@drawable/login_input"
                        android:drawableLeft="@drawable/ic_username"
                        android:layout_marginTop="4dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="đăng kí"
                        android:id="@+id/btnCreate"
                        android:background="#2980b9"
                        android:textColor="#FFF"
                        android:layout_below="@+id/edtRepeatPassword"
                        android:layout_marginTop="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/edtOldPass"
                        android:textColor="#FFF"
                        android:textColorHint="#FFF"
                        android:hint="mật khẩu"
                        android:background="@drawable/login_input"
                        android:drawableLeft="@drawable/ic_password"
                        android:layout_below="@+id/edtUsername"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="4dp" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:id="@+id/edtRepeatPassword"
                        android:drawableLeft="@drawable/ic_password"
                        android:textColor="#FFF"
                        android:hint="nhâp lại mật khẩu"
                        android:textColorHint="#FFF"
                        android:background="@drawable/login_input"
                        android:layout_below="@+id/edtOldPass"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="4dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="hủy"
                        android:id="@+id/btnCancel"
                        android:background="#ffffff"
                        android:textColor="#000"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/btnCreate"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>

            </LinearLayout>
        </ScrollView>


    </RelativeLayout>
</RelativeLayout>
