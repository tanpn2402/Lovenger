<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="10dp"
android:paddingLeft="20dp"
android:paddingRight="20dp"
android:paddingTop="10dp"
android:background="#fff"
tools:context="com.tanpn.messenger.login.AddFriendActivity"
    >

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Chào Phạm !"
    android:id="@+id/tvHello"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="70dp"
    android:textSize="30dp" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Đây là id của bạn, hãy dùng mã này để tạo nhóm với bạn bè"
    android:id="@+id/textView18"
    android:layout_below="@+id/tvHello"
    android:layout_centerHorizontal="true"
    android:textAlignment="center"
    android:layout_marginTop="5dp" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/edtUserID"
    android:layout_below="@+id/textView18"
    android:layout_alignRight="@+id/textView18"
    android:layout_alignEnd="@+id/textView18"
    android:layout_alignLeft="@+id/textView18"
    android:layout_alignStart="@+id/textView18"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/custom_edittext"
    android:layout_marginTop="10dp"
    android:textAlignment="center"
    android:text="123abc" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Nhập mã bạn bè của bạn để tạo nhóm với họ"
    android:id="@+id/textView19"
    android:layout_marginTop="30dp"
    android:layout_below="@+id/edtUserID"
    android:layout_centerHorizontal="true"
    android:textAlignment="center" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/edtFriendID"
    android:layout_below="@+id/textView19"
    android:layout_alignRight="@+id/edtUserID"
    android:layout_alignEnd="@+id/edtUserID"
    android:layout_alignLeft="@+id/edtUserID"
    android:layout_alignStart="@+id/edtUserID"
    android:background="@drawable/custom_edittext"
    android:layout_marginTop="10dp"
    android:textAlignment="center" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="hoặc nhập mã nhóm bạn muốn tham gia"
    android:id="@+id/textView21"
    android:textAlignment="center"
    android:layout_below="@+id/edtFriendID"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/edtGroupID"
    android:layout_below="@+id/textView21"
    android:layout_alignRight="@+id/edtFriendID"
    android:layout_alignEnd="@+id/edtFriendID"
    android:layout_alignLeft="@+id/edtFriendID"
    android:layout_alignStart="@+id/edtFriendID"
    android:background="@drawable/custom_edittext"
    android:layout_marginTop="10dp"
    android:textAlignment="center" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Tham gia"
    android:id="@+id/btnJoin"
    android:layout_below="@+id/edtGroupID"
    android:layout_marginTop="57dp"
    android:layout_alignRight="@+id/edtGroupID"
    android:layout_alignEnd="@+id/edtGroupID"
    android:layout_alignLeft="@+id/edtGroupID"
    android:layout_alignStart="@+id/edtGroupID"
    style="@style/AppTheme.AppBarOverlay"
    android:background="#038639"
    android:textColor="#FFF" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:text="Bạn không thể sử dụng ứng dụng này một mình, hãy mời bạn bè sử dụng."

    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:textAlignment="center" />

</RelativeLayout>

